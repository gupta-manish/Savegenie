<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_margin = "10dp">

    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:orientation = "vertical">

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Your Name*" />

            <EditText
                android:id = "@+id/nameNew"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:ems = "10"
                android:hint = "Enter Your Name"
                android:inputType = "textPersonName" />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Your Address*" />

            <EditText
                android:id = "@+id/addressNew"
                android:layout_width = "match_parent"
                android:layout_height = "125dp"
                android:layout_gravity = "center_horizontal"
                android:ems = "10"
                android:hint = "Address"
                android:inputType = "textMultiLine" />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Society Name" />

            <AutoCompleteTextView
                android:id = "@+id/societyName"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:ems = "10"
                android:inputType = "textPersonName"
                android:hint = "Society" />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Near Landmark" />

            <EditText
                android:id = "@+id/landmark"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:ems = "10"
                android:inputType = "textPersonName"
                android:hint = "Landmark" />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Your Area" />

            <EditText
                android:id = "@+id/areaNew"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:ems = "10"
                android:inputType = "textPersonName"
                android:text = "Area" />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Your City" />

            <EditText
                android:id = "@+id/cityNew"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:ems = "10"
                android:inputType = "textPersonName"
                android:text = "City" />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:text = "Your Mobile" />

            <EditText
                android:id = "@+id/mobileNew"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:ems = "10"
                android:inputType = "textPersonName"
                android:text = "Mobile" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id = "@+id/spinnerRelativeLayout"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:background = "#00A1F8"
        android:visibility="invisible">

        <ProgressBar
            android:id = "@+id/pbSpinner"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerInParent = "true" />
    </RelativeLayout>
</RelativeLayout><!-- From: file:/home/manish/Dev/Android_Workspace/Savegenie/app/src/main/res/layout/dialog_enter_new_shipping_address.xml -->