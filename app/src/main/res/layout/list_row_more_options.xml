<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/innerRowRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/itemIcon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:background="#ffffff"
                    android:src="@drawable/ic_launcher"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="55"
                    android:background="#d0d0d0">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:padding="10dp">

                        <TextView
                            android:id="@+id/itemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Item Name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/priceString"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/itemName"
                            android:layout_marginTop="2dp"
                            android:text="Price:"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/itemSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/priceString"
                            android:layout_marginTop="2dp"
                            android:text="Size:"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/itemQuant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/itemSize"
                            android:layout_marginTop="2dp"
                            android:text="Quantity:"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/selectAlternate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/itemQuant"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_to_wishlist_selector"
                            android:text="Select Alternate"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF" />


                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>



        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>